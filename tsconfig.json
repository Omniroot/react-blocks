{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2016",
    "module": "es2015",
    "moduleResolution": "node",
    "jsx": "react",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "lib": [
     "dom",
     "es2015",
     "es2016",
     "es2017",
     "dom.iterable",
     "scripthost"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
